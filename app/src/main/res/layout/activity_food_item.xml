<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FAFAD2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Food Name"
        android:id="@+id/foodName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Food Address"
        android:id="@+id/foodAddress"
        android:layout_below="@+id/foodName"
        android:layout_alignLeft="@+id/foodName"
        android:layout_alignStart="@+id/foodName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Food Description"
        android:id="@+id/foodDescription"
        android:layout_below="@+id/foodAddress"
        android:layout_alignLeft="@+id/foodAddress"
        android:layout_alignStart="@+id/foodAddress"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/foodWebsite"
        android:src="@drawable/website"
        android:layout_marginRight="97dp"
        android:layout_marginEnd="97dp"
        android:layout_above="@+id/foodDescription"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/foodDelete"
        android:layout_alignTop="@+id/foodWebsite"
        android:layout_alignLeft="@+id/foodWebsite"
        android:layout_alignStart="@+id/foodWebsite"
        android:src="@drawable/delete"
        android:layout_marginLeft="60dp" />

</RelativeLayout>