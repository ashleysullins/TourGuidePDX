<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guest.tourguidepdx" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LetsGo"
            android:label="@string/title_activity_lets_go"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.tourguidepdx.MainActivity" />
        </activity>
        <activity
            android:name=".Food"
            android:label="@string/title_activity_food"
            android:parentActivityName=".LetsGo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.tourguidepdx.LetsGo" />
        </activity>
        <activity
            android:name=".Drink"
            android:label="@string/title_activity_drink"
            android:parentActivityName=".LetsGo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.tourguidepdx.LetsGo" />
        </activity>
        <activity
            android:name=".Attractions"
            android:label="@string/title_activity_attractions"
            android:parentActivityName=".LetsGo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.tourguidepdx.LetsGo" />
        </activity>
    </application>

</manifest>
