<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guest.tourguidepdx" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.LetsGoActivity"
            android:label="@string/title_activity_lets_go"
            android:parentActivityName=".UI.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.MainActivity" />
        </activity>
        <activity
            android:name=".UI.FoodActivity"
            android:label="@string/title_activity_food"
            android:parentActivityName=".UI.LetsGoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.LetsGoActivity" />
        </activity>
        <activity
            android:name=".UI.DrinkActivity"
            android:label="@string/title_activity_drink"
            android:parentActivityName=".UI.LetsGoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.LetsGoActivity" />
        </activity>
        <activity
            android:name=".UI.AttractionListActivity"
            android:label="@string/title_activity_attractions"
            android:parentActivityName=".UI.LetsGoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.LetsGoActivity" />
        </activity>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="TourGuide.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".UI.AddFoodActivity"
            android:label="@string/title_activity_add_food"
            android:parentActivityName=".UI.FoodActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.tourguidepdx.UI.FoodActivity" />
        </activity>
        <activity
            android:name=".UI.CuisineActivity"
            android:label="@string/title_activity_food_type"
            android:parentActivityName=".UI.LetsGoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.tourguidepdx.UI.LetsGoActivity" />
        </activity>
    </application>

</manifest>
